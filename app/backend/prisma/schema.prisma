// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  email  String
  birday DateTime

  cv   cvs @relation(fields: [idcv], references: [id])
  idcv Int

  skills  skills @relation(fields: [idskill], references: [id])
  idskill Int

  @@map("users")
}

model skills {
  id        Int     @id @default(autoincrement())
  nameSkill String
  users     users[]

  @@map("skills")
}

model cvs {
  id      Int     @id @default(autoincrement())
  vacancy String
  company String
  users   users[]

  @@map("curriculum")
}
