enum Education {
  FUNDAMENTAL_COMPLETO
  MEDIO_INCOMPLETO
  MEDIO_COMPLETO
  SUPERIOR_INCOMPLETO
  SUPERIOR_COMPLETO
  MESTRADO
  DOUTORADO
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(60)
  email     String    @db.VarChar(60)
  cpf       String    @db.VarChar(14)
  phone     String    @db.VarChar(11)
  birday    DateTime  @db.Date()
  education Education
  password  String    @unique
  admin     Boolean   @default(false)
  createdAt DateTime  @default(now())

  skills  skills @relation(fields: [idskill], references: [id])
  idskill Int
  cvs     cvs[]

  @@map("users")
}

model skills {
  id        Int      @id @default(autoincrement())
  nameSkill String
  createdAt DateTime @default(now())

  users users[]

  @@map("skills")
}

model cvs {
  id        Int      @id @default(autoincrement())
  vacancy   String
  createdAt DateTime @default(now())

  user   users @relation(fields: [iduser], references: [id])
  iduser Int

  @@map("curriculum")
}
